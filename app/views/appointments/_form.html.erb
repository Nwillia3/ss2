              <div class="form-group">
                <label><%= f.label :trainer, :class => "col-md-4 control-label" %><br /></label>

                <%= select("appointment", "trainer_id", Trainer.all.collect {|p| [ p.fullname, p.id ] }) %>
              </div>
            </div>
          </div>

