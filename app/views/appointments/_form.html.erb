              <div class="form-group">
                <label><%= f.label :location, :class => "col-md-12 " %></label>

                <%= f.text_field :location, autofocus: true, :class => 'form-control input-md'%>
              </div>
            </div>
          </div> 
                    <!-- , :placeholder => "Blink fitness at ....."  -->
