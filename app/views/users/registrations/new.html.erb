<div id="contain" class="container">
  <div class="row"> 
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <h2>Create an account </h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <form class="form-horizontal">
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <label><%= f.label :fullname, :class => "col-md-4 control-label" %><br /></label>
                <%= f.text_field :fullname, autofocus: true, :class => 'form-control input-md', :placeholder => "full Name i.e John Snow" %>
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <label><%= f.label :username, :class => "col-md-4 control-label" %><br /></label>
                <%= f.text_field :username, autofocus: true, :class => 'form-control input-md', :placeholder => "full Name i.e John Snow"  %>
              </div>
            </div>
          </div>  

          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <label><%= f.label :height, :class => "col-md-4 control-label" %><br /></label>
                <%= f.text_field :height, autofocus: true, :class => 'form-control input-md', :placeholder => "height i.e 5'11'" %>
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <label><%= f.label :weight, :class => "col-md-4 control-label" %><br /></label>
                <%= f.text_field :weight, autofocus: true, :class => 'form-control input-md', :placeholder => "Please enter your current weight"  %>
              </div>
            </div>
          </div>  

          

          <div class="form-group">
            <label><%= f.label :email, :class => "col-md-4 control-label" %><br /></label>
            <%= f.email_field :email, autofocus: true, :class => 'form-control input-md', :placeholder => "E-mail Address"  %>
          </div>

          <div class="form-group">
            <label><%= f.label :password, :class => "col-md-4 control-label" %></label>
            
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-md', :placeholder => "Password... (6 characters minimum) "   %>
          </div>

          <div class="form-group">
            <label><%= f.label :password_confirmation, :class => "col-md-4 control-label" %><br /></label>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control input-md', :placeholder => "Confirm password" %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", :class => 'btn btn-primary' %>
          </div>
        </form>
      <% end %>
      <h4>Already have an account<button class="btn btn-info"><%= render "users/shared/links" %></button></h4>
    </div>
  </div>
</div>
