<div class="container" id="contain">
  <div class="row">
    <div class="col-sm-4 text-center">
      
      <%=  image_tag @user.image.url(:medium) %>

     
    </div>
    <div class="col-sm-8">
     <h3><%= @user.fullname %></h3>  
      <p>Profession: <%= @user.id %></p>
      <p>High School: <%= @user.age %></p>
      <p>College: <%= @user.height %></p>
      <p>About me: <%=  @user.weight %></p>
      <%if user_signed_in? && current_user.id == @user.id   %>
        <p><%= link_to 'Edit Profile', edit_user_registration_path %></p>
        <p><%= link_to "Logout", destroy_user_session_path, :method => :delete %></p>
        
      <% end %>
    </div>
  </div>

  <% if user_signed_in? && current_user.id == @user.id %> 
    <div class="row">
      <div class="col-sm-4">
        <h3 class="divider-line pt-20">My Appointments</h3>
        <% @user.appointments.each do |appointment| %>
          <div class="card">
            <div class="card-block">
              <p class="card-title">Title: <%= link_to appointment.location, appointment %></p>
              <p><%= appointment.app_date.to_time.strftime('%b %e %Y %l:%M %p')%></p> 
            </div>
          </div>
            
        <% end %>
      </div>
    </div>
  <% end %>

</div>