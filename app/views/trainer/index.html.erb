  <div class="Saiyan-box">
    <div class="row">
      <!-- <div class="col-sm-12">
        <h3>Trainers</h3>
      </div> -->
      <% @trainer.each do |trainer| %>
        <div class="col-md-4 col-sm-6 center">
          <div class="card" style="width: 20rem;">
            <div class="card-img-top image">
               <%=  image_tag (trainer.image.url(:medium)) %>
            </div>
            
            <div class="card-block">
              <h4 class="card-title"><%= link_to(trainer.fullname, trainer_path(trainer))%></h4>
              
              <ul class="trainer-info">
                <li><b>Age: </b><%= trainer.age %></li>
                <li><b>Height: </b> <%= trainer.height %></li>
                <li><b> Weight: </b> <%= trainer.weight %></li>
              </ul>
             
              <%= link_to 'view profile', trainer_path(trainer), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
